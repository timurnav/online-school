<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Timur" id="creatingContactsTable">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="contacts"/>
            </not>
        </preConditions>
        <createTable tableName="contacts">
            <column name="id" type="integer" defaultValue="nextval('global_seq')">
                <constraints primaryKey="true"/>
            </column>
            <column name="email" type="varchar">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="phone_number" type="varchar">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="telegram_link" type="varchar">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="linkedin_link" type="varchar">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="github_link" type="varchar">
                <constraints nullable="true" unique="true"/>
            </column>
            <column name="facebook_link" type="varchar">
                <constraints nullable="true" unique="true"/>
            </column>
        </createTable>
        <addColumn tableName="users">
            <column name="contact_id" type="integer"/>
        </addColumn>
        <addForeignKeyConstraint baseTableName="users" baseColumnNames="contact_id"
                                 constraintName="contacts_ref" referencedTableName="contacts"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>