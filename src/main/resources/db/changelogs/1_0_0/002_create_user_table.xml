<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet author="Timur" id="creatingUserTable">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="users"/>
            </not>
        </preConditions>
        <createTable tableName="users">
            <column name="id" type="integer" defaultValue="nextval('global_seq')">
                <constraints primaryKey="true"/>
            </column>
            <column name="user_type" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="firstname" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="lastname" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="registered" type="timestamp" defaultValue="now()">
                <constraints nullable="false"/>
            </column>
            <column name="manager_id" type="integer"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="users" baseColumnNames="manager_id"
                                 constraintName="manager_ref" referencedTableName="users"
                                 referencedColumnNames="id" onDelete="CASCADE"/>
    </changeSet>
</databaseChangeLog>